# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Resend Email Configuration (REQUIRED FOR BULK EMAIL SENDER)
RESEND_API_KEY=re_your_resend_api_key_here
RESEND_AUDIENCE_ID=your_audience_id_here
EMAIL_FROM=noreply@yourdomain.com

# Unsubscribe Configuration (REQUIRED FOR EMAIL UNSUBSCRIBE FEATURE)
# Generate a secure random secret key (e.g., using: openssl rand -base64 32)
UNSUBSCRIBE_SECRET=your_secure_random_secret_here

# Optional Email Configuration
ADMIN_EMAIL=admin@example.com
PRINTER_EMAIL=printer@example.com

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
